<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="9dp"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/profPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:padding="2dp"
        android:contentDescription="@string/profile_picture_desc"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/profName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profPic"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/profPic"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/remDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profName"
        android:textColor="#000000"
        android:layout_below="@+id/profName"
        android:layout_marginTop="3dp"
        android:text="B'Day" />

</RelativeLayout>